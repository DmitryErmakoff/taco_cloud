<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="1" author="author">
        <createTable tableName="ingredient">
            <column name="id" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="type" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="author">
        <createTable tableName="taco">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="createdAt" type="TIMESTAMP"/>
        </createTable>
    </changeSet>

    <changeSet id="3" author="author">
        <addCheckConstraint tableName="taco" constraintName="name_length_check" columnNames="name" checkExpression="LENGTH(name) &gt;= 5"/>
    </changeSet>

    <changeSet id="4" author="author">
        <createTable tableName="taco_order">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="placedAt" type="TIMESTAMP"/>
            <column name="deliveryName" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="deliveryStreet" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="deliveryCity" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="deliveryState" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="deliveryZip" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="ccNumber" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="ccExpiration" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="ccCVV" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="5" author="author">
        <addCheckConstraint tableName="taco_order" constraintName="ccNumber_format_check" columnNames="ccNumber" checkExpression="ccNumber  ~ '^[0-9]+$'"/>
    </changeSet>

    <changeSet id="6" author="author">
        <addCheckConstraint tableName="taco_order" constraintName="ccCVV_format_check" columnNames="ccCVV" checkExpression="ccCVV  ~ '^[0-9]+$'"/>
    </changeSet>

    <changeSet id="7" author="author">
        <createTable tableName="taco_ingredients">
            <column name="taco_id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="ingredient_id" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="8" author="author">
        <addForeignKeyConstraint baseTableName="taco_ingredients" baseColumnNames="taco_id"
                                 constraintName="fk_taco_id" referencedTableName="taco" referencedColumnNames="id"
                                 onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="9" author="author">
        <addForeignKeyConstraint baseTableName="taco_ingredients" baseColumnNames="ingredient_id"
                                 constraintName="fk_ingredient_id" referencedTableName="ingredient" referencedColumnNames="id"
                                 onDelete="CASCADE"/>
    </changeSet>
    <changeSet author="dmitryermakoff" id="insert_ingredients">
        <insert tableName="ingredient">
            <column name="id" value="GRBF"/>
            <column name="name" value="Ground Beef"/>
            <column name="type" value="PROTEIN"/>
        </insert>
        <insert tableName="Ingredient">
            <column name="id" value="CARN"/>
            <column name="name" value="Carnitas"/>
            <column name="type" value="PROTEIN"/>
        </insert>
        <insert tableName="Ingredient">
            <column name="id" value="TMTO"/>
            <column name="name" value="Diced Tomatoes"/>
            <column name="type" value="VEGGIES"/>
        </insert>
        <insert tableName="Ingredient">
            <column name="id" value="LETC"/>
            <column name="name" value="Lettuce"/>
            <column name="type" value="VEGGIES"/>
        </insert>
        <insert tableName="Ingredient">
            <column name="id" value="CHED"/>
            <column name="name" value="Cheddar"/>
            <column name="type" value="CHEESE"/>
        </insert>
        <insert tableName="Ingredient">
            <column name="id" value="JACK"/>
            <column name="name" value="Monterrey Jack"/>
            <column name="type" value="CHEESE"/>
        </insert>
        <insert tableName="Ingredient">
            <column name="id" value="SLSA"/>
            <column name="name" value="Salsa"/>
            <column name="type" value="SAUCE"/>
        </insert>
        <insert tableName="Ingredient">
            <column name="id" value="SRCR"/>
            <column name="name" value="Sour Cream"/>
            <column name="type" value="SAUCE"/>
        </insert>
    </changeSet>

</databaseChangeLog>